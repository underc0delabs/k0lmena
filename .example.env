BASEURL=URL
API_BASEURL=URL
BROWSER=chromium

# Front auto-healing (Playwright)
# off | learn | heal | on
K0LMENA_AUTO_HEALING=off

# History flush strategy:
# - debounced  (default): batch writes to reduce IO
# - immediate          : write on every update
# - onEnd              : only write once in AfterAll
K0LMENA_AUTO_HEALING_FLUSH=debounced

# Write pretty JSON (slower, larger). 0 = compact, 1 = pretty
K0LMENA_AUTO_HEALING_WRITE_PRETTY=0

# Optional: enable verbose console logging for auto-healing
K0LMENA_AUTO_HEALING_LOG=0

# Print a single console line whenever a locator is auto-healed.
# 0 = off, 1 = on
K0LMENA_AUTO_HEALING_CONSOLE=1

# Where to store the locator history file
K0LMENA_AUTO_HEALING_HISTORY_PATH=.k0lmena/auto-healing/front-history.json

# Max number of candidate locators stored per original locator
K0LMENA_AUTO_HEALING_MAX_CANDIDATES=12

# Timeout for DOM snapshot during learning (best-effort).
# Keep this small so learning never slows down test execution.
K0LMENA_AUTO_HEALING_SNAPSHOT_TIMEOUT_MS=250

# Timeout used when validating candidate locators during healing
K0LMENA_AUTO_HEALING_CANDIDATE_TIMEOUT_MS=1500